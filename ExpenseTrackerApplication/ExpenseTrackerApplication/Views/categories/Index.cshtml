@model IEnumerable<ExpenseTrackerApplication.Models.category>

@{
    ViewBag.Title = "Index";
}

<h2>Category List </h2>

@*<p>
   @Html.ActionLink("Create New", "Create")
</p>*@


<table class="table" style="color:white; background-color:black" >
    <tr>
        <th >
            @Html.DisplayNameFor(model => model.Category_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category_Limit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {


        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Limit)
            </td>
            <td>

                <span> @Html.ActionLink("Edit", "Edit", new { id = item.ID }, new { style = "background-color:white", @class = "btn" })</span>
                <span> @Html.ActionLink("Details", "Details", new { id = item.ID }, new { style = "background-color:white", @class="btn"})</span>
                <span> @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { style = "background-color:white", @class="btn"})</span>
               
                
            </td>
        </tr>
     }

</table>
